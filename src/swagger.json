{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "BODHI CLINIC SERVICE",
    "description": "This service is used to manage Clinic & Doctor Details of BODHI Application ",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "securityDefinitions": {
    "JWT": {
      "type": "apiKey",
      "name": "x-access-token",
      "in": "header"
    }
  },
  "security": [
    {
      "JWT": []
    }
  ],
  "responses": {
    "UnauthorizedError": {
      "description": "Access token is missing or invalid"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Clinic",
      "description": "API for Clinic details in the system"
    },
    {
      "name": "Doctor",
      "description": "API for Doctor details in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/clinic": {
      "get": {
        "tags": [
          "Clinic"
        ],
        "summary": "Get all clinics in system",
        "description": "This can only be done by the logged in user.",
        "operationId": "viewClinics",
        "produces": "application/xml,application/json",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Clinic"
            }
          }
        }
      },
      "post": {
        "tags": [
          "Clinic"
        ],
        "summary": "Insert clinic details into system",
        "description": "This can only be done by the logged in user.",
        "operationId": "insertClinic",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": "true",
            "description": "Enter clinic details"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Clinic"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Clinic"
        ],
        "summary": "Update clinic details",
        "description": "This can only be done by the logged in user.",
        "operationId": "updateClinic",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": "true",
            "description": "Update clinic"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Clinic"
            }
          }
        }
      }
    },
    "/clinic/name/{name}": {
      "get": {
        "tags": [
          "Clinic"
        ],
        "summary": "View Clinic details by name",
        "description": "This can only be done by the logged in user.",
        "operationId": "viewClinicByName",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": "true",
            "description": "View Clinic Details"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Clinic"
            }
          }
        }
      }
    },
    "/clinic/city/{city}": {
      "get": {
        "tags": [
          "Clinic"
        ],
        "summary": "View Clinic details by city Name/No.",
        "description": "This can only be done by the logged in user.",
        "operationId": "viewClinicBycity",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "city",
            "in": "path",
            "required": "true",
            "description": "View Clinic Details"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Clinic"
            }
          }
        }
      }
    },
    "/doctor/{id}": {
      "post": {
        "tags": [
          "Doctor"
        ],
        "summary": "Insert doctor details into system",
        "description": "This can only be done by the logged in user.",
        "operationId": "insertDcotor",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": "true",
            "description": "Enter Clinic ID"
          },
          {
            "name": "body",
            "in": "body",
            "required": "true",
            "description": "Enter doctor details"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Dcotor"
            }
          }
        }
      },
      "get": {
        "tags": [
          "Doctor"
        ],
        "summary": "View Doctor Details",
        "description": "This can only be done by the logged in user.",
        "operationId": "viewDoctors",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": "true",
            "description": "View Clinic Details"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Doctor"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Clinic": {
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "uniqueItems": true
        },
        "address": {
          "type": "string"
        },
        "contact_no": {
          "type": "string"
        },
        "about": {
          "type": "string"
        }
      }
    },
    "Doctor": {
      "required": [
        "first_name",
        "last_name"
      ],
      "properties": {
        "first_name": {
          "type": "string",
          "uniqueItems": true
        },
        "last_name": {
          "type": "string",
          "uniqueItems": true
        },
        "address": {
          "type": "string"
        },
        "contact_no": {
          "type": "string"
        },
        "about": {
          "type": "string"
        }
      }
    }
  }
}